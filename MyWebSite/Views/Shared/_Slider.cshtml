<section class="g-pos-rel">
    <div class="dzsparallaxer auto-init height-is-based-on-content use-loading mode-scroll" data-options='{direction: "reverse", settings_mode_oneelement_max_offset: "150"}'>
        <div class="divimage dzsparallaxer--target w-100 g-bg-cover g-bg-pos-top-center g-bg-img-hero g-bg-bluegray-opacity-0_2--after" style="height: 130%; background-image: url(../../assets/img/sliderbgs/codebg.jpg);"></div>

        <div class="container g-bg-cover__inner g-py-100">
            <div class="row align-items-center">
                <div class="col-lg-6 g-mb-30 g-mb-0--lg">
                    <h2 class="h1 text-uppercase g-color-white g-mb-30">
                        <span class="g-bg-primary-dark-v3 g-px-5">Code - Build - Deploy</span>
                    </h2>
                    <h3 class="h5 g-color-white">
                        <span class="g-bg-black-opacity-0_6 g-px-5">@ViewBag.Message</span>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</section>
