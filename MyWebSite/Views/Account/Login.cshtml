@using MyWebSite.ViewModels.Account
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
@section styles
{
    @Styles.Render("~/Content/unify/pages/page_log_reg_v1.css")
}

<div class="container content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "reg-page", role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="reg-header">
                    <h2>Sign In</h2>
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    <p>Don't Have Account? Click @Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "color-green" }) to registration.</p>    
                </div>
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-6 checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </label>
                    </div>
                    <div class="col-md-6">
                        <button class="btn-u pull-right" type="submit">Log in</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
