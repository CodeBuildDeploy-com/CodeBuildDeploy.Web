<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Title -->
    <title>@ViewData["Title"] - Code-Build-Deploy</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.ico">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- CSS Vendor Plugins -->
    <link rel="stylesheet" href="/vendor/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/vendor/hs-mega-menu/dist/hs-mega-menu.min.css">

    <!-- CSS Unify -->
    <link rel="stylesheet" href="/css/theme.min.css">

    <!-- CSS Razor Pages -->
    @RenderSection("styles", required: false)
</head>
<body>

    <!-- Header -->
    <header id="header" class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <!-- Navbar -->
            @{
                Html.RenderPartial("_Navbar");
            }
            <!-- End Navbar -->
        </div>
    </header>
    <!-- End Header -->

    <!-- Main Content -->
    <main id="content" role="main">
        <!-- Midbars Part -->
        @{
            Html.RenderPartial("_Midbars");
        }
        <!-- End Midbars Part -->
        <!-- Content Part -->
        @RenderBody()
        <!-- End Content Part -->
    </main>
    <!-- End Main Content -->

    <!-- Footer -->
    <footer class="bg-dark">
        <div class="container">
            <!-- Main Row -->
            @{
                Html.RenderPartial("_Footer");
            }
            <!-- End Main Row -->
            <!-- Copyright Row -->
            @{
                Html.RenderPartial("_Copyright");
            }
            <!-- End Copyright Row -->
        </div>
    </footer>
    <!-- End Footer -->

    <!-- Back to top icon -->
    <a class="js-go-to go-to position-fixed" href="javascript:;" style="visibility: hidden;"
        data-hs-go-to-options='{
          "offsetTop": 700,
          "position": {
            "init": {
              "right": "2rem"
            },
            "show": {
              "bottom": "2rem"
            },
            "hide": {
              "bottom": "-2rem"
            }
          }
        }'>
        <i class="bi-chevron-up"></i>
    </a>
    <!-- End Back to top icon -->

    <!-- JS Global Compulsory  -->
    <script src="/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS Implementing Plugins -->
    <script src="/vendor/hs-header/dist/hs-header.min.js"></script>
    <script src="/vendor/hs-mega-menu/dist/hs-mega-menu.min.js"></script>
    <script src="/vendor/hs-go-to/dist/hs-go-to.min.js"></script>

    <!-- JS Unify -->
    <script src="/js/theme.min.js"></script>
    
    @RenderSection("scripts", required: false)

    <!-- JS Plugins Init. -->
    <script>
        (function () {
            // INITIALIZATION OF NAVBAR
            // =======================================================
            new HSHeader('#header').init()


            // INITIALIZATION OF MEGA MENU
            // =======================================================
            const megaMenu = new HSMegaMenu('.js-mega-menu', {
                desktop: {
                    position: 'left'
                }
            })


            // INITIALIZATION OF GO TO
            // =======================================================
            new HSGoTo('.js-go-to')
        })()
    </script>

</body>
</html>
