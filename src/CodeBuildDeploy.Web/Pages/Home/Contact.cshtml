@page
@model ContactModel

<div class="container pt-10 pb-4">
    <div class="row justify-content-between">
        <div class="col-lg-7 mb-6">
            <h2 class="h3">Contact us</h2>
            <p>We would love to here from you!</p>

            <hr class="my-4">

            <!-- Contact Form -->
            <form>
                <div class="mb-2">
                    <label>
                        Your name: <span class="text-danger">*</span>
                    </label>
                    <input class="form-control rounded-3 py-1 px-1" type="text">
                </div>

                <div class="mb-2">
                    <label>
                        Your email: <span class="text-danger">*</span>
                    </label>
                    <input class="form-control rounded-3 py-1 px-1" type="email">
                </div>

                <div class="mb-4">
                    <label>
                        Your message: <span class="text-danger">*</span>
                    </label>
                    <textarea class="form-control rounded-3 py-1 px-1" rows="7"></textarea>
                </div>

                <button class="btn btn-primary btn-lg rounded-3 text-uppercase py-1 px-3" type="submit" role="button">Send Enquiry</button>
            </form>
            <!-- End Contact Form -->
        </div>

        <div class="col-lg-4 g-mb-60">

            <hr class="g-my-40">

            <!-- Contact Info -->
            <h2 class="h3 mb-4">Contact info</h2>

            <div class="row mb-2">
                <div class="col-1">
                    <i class="d-flex mt-1 mr-3 bi bi-pin-map"></i>
                </div>
                <div class="col">
                    <p class="g-color-gray-dark-v3 mb-2">
                        Bradford,
                        <br />West Yorkshire,
                        <br />United Kingdom
                    </p>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    <i class="d-flex mt-1 mr-3 bi bi-at"></i>
                </div>
                <div class="col">
                    <p class="g-color-gray-dark-v3 mb-2">
                        Email: <a class="g-color-gray-dark-v4" href="mailto:mark.pollard@bjss.co.uk">mark.pollard@bjss.co.uk</a>
                    </p>
                </div>
            </div>
            <!-- End Contact Info -->
        </div>
    </div>
</div>

